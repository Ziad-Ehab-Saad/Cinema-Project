@using Cinema.ViewModels
@model ActorsDetails


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.actor.FirstName @Model.actor.LastName - Actor Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #181818;
            color: white;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .actor-profile {
            display: flex;
            align-items: center;
            gap: 20px;
            padding: 20px;
            border-radius: 10px;
            background-color: #222;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        }

        .actor-img {
            width: 180px;
            height: 180px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid dodgerblue;
        }

        .actor-info h2 {
            font-size: 1.8rem;
            font-weight: bold;
        }

        .actor-bio {
            font-size: 1.1rem;
            color: #bbb;
        }

        .movies-section {
            margin-top: 30px;
        }

        .movie-card {
            background-color: #222;
            border-radius: 10px;
            padding: 15px;
            min-height: 150px; /* Ensures consistent height */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            text-align: center;
        }

        .card-title {
            white-space: wrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .movie-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
        }

        .back-btn {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 15px;
            background-color: dodgerblue;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s;
        }

            .back-btn:hover {
                background-color: royalblue;
            }
    </style>
</head>
<body> 
    @if(User.Identity.IsAuthenticated){
    <div class="container">
        <!-- Actor Profile -->
        <div class="actor-profile">
            <img src="~/assets/cast/@Model.actor.ProfilePicture" alt="@Model.actor.FirstName" class="actor-img">
            <div class="actor-info">
                <h2>@Model.actor.FirstName @Model.actor.LastName</h2>
                <p class="actor-bio">@Model.actor.News</p>
                <p class="actor-bio">@Model.actor.Bio</p>
            </div>
        </div>

        <!-- Movies Section -->
        <h2 class="movies-section">Movies</h2>
        <div class="row">
            @foreach (var item in Model.movies)
            {
                <div class="col-md-4 col-sm-6 mb-4 d-flex">
                    <div class="card movie-card w-100 text-center p-3 d-flex flex-column justify-content-between">
                        <h5 class="card-title text-truncate" style="color:white; max-width: 100%;">@item.Name</h5>
                        <a asp-controller="Movie" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mt-auto">
                            View Movie
                        </a>
                    </div>
                </div>
            }
        </div>


        <!-- Back Button -->
        <a asp-area="Customer" asp-controller="Movie" asp-action="Index" class="back-btn my-2">← Back to Movies</a>
    </div>
    }
</body>
</html>
