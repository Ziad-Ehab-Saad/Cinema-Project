@model Category



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #181818;
            color: white;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .movie-card {
            background-color: #222;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s;
            display: flex;
            flex-direction: column;
            height: auto; /* Allow card to expand naturally */
            min-height: 550px; /* Ensure minimum height */
        }

            .movie-card:hover {
                transform: scale(1.05);
            }

            .movie-card img {
                width: 100%;
                height: 250px;
                object-fit: cover;
                object-position:top;
            }

        .movie-details {
            padding: 15px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .movie-title {
            font-size: 1.5rem;
            font-weight: bold;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .movie-info {
            font-size: 1rem;
            opacity: 0.8;
        }

        .badge {
            font-size: 0.9rem;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .price-tag {
            background-color: red;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            font-weight: bold;
            display: inline-block;
            margin-top: 10px;
        }

        .details-btn {
            background-color: dodgerblue;
            color: white;
            text-decoration: none;
            padding: 10px;
            border-radius: 5px;
            display: block;
            text-align: center;
            font-weight: bold;
            margin-top: 10px;
            transition: background-color 0.3s;
        }

            .details-btn:hover {
                background-color: royalblue;
            }

        .all-categories-btn {
            width: 200px; /* Adjust width as needed */
            height: 50px; /* Adjust height as needed */
            line-height: 50px; /* Center text vertically */
            font-size: 1.2rem; /* Adjust font size */
            text-align: center;
            display: block;
            margin: 20px auto; /* Center the button */
        }

    </style>
</head>
<body>
    @if(User.Identity.IsAuthenticated){
    <div class="container">
        <a asp-area="Customer" asp-controller="Category" asp-action="Index" class="details-btn my-3">
            All Categories
        </a>
        <div class="row">
            
            @foreach (var item in Model.Movies)
            {
                <div class="col-md-4 col-sm-6 mb-4 d-flex">
                    <div class="movie-card w-100">
                        <img src="~/assets/movies/@item.ImageUrl" alt="@item.Name">
                        <div class="movie-details">
                            <h5 class="movie-title">@item.Name</h5>
                            <p class="movie-info">Category: @item.Category.Name</p>
                            <p class="movie-info">Cinema: @item.Cinema.Name</p>
                            <p class="movie-info">Start Date: @item.StartDate.ToShortDateString()</p>
                            <p class="movie-info">End Date: @item.EndDate.ToShortDateString()</p>

                            <!-- Movie Status -->
                            <p class="movie-info">
                                Status:
                                @if (item.MovieStatus.ToString() == "Available")
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else if (item.MovieStatus.ToString() == "ComingSoon")
                                {
                                    <span class="badge bg-warning text-dark">Coming Soon</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Expired</span>
                                }
                            </p>

                            <span class="price-tag">EGP @item.Price</span>

                            <!-- Details Button -->
                            <a asp-area="Customer" asp-controller="Movie" asp-action="Details" asp-route-id="@item.Id" class="details-btn">
                                View Details
                            </a>

                            

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    }
</body>
</html>
