<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cinema.styles.css" asp-append-version="true" />
</head>


<body class="d-flex flex-column min-vh-100">

    <style>
        html, body {
            margin: 0;
            padding: 0;
        }
        .navbar-logo {
            height: 70px; /* Adjust height to match navbar */
            width: auto; /* Keeps aspect ratio */
            object-fit: contain; /* Ensures image fits well */
        }



        body {
            padding-top: 0px !important;
        }

        header {
            margin: 0;
            padding: 0;
        }

    </style>
    <header>
        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-expand-lg"
                 style="background-color: black; padding: 10px; min-height: 80px; width: 100%; margin-top: 0;">





                <div class="container">
                    <!-- Display Logged-in User's Name -->
                    <a class="navbar-brand d-flex align-items-center text-danger fw-bold ms-3" asp-action="Index" asp-controller="Movie" asp-area="Customer">
                        <img src="~/assets/img/Clogo.jpg" alt="Cinema Logo" class="navbar-logo me-2" />

                    </a>
                    <span class="navbar-text text-white fw-bold">
                        Welcome, @User.Identity.Name
                    </span>
                    


                    @* <a class="navbar-brand text-danger fw-bold ms-3" asp-action="Index" asp-controller="Movie" asp-area="Customer">Cinema</a> *@

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <!-- Movies Button -->
                            <li class="nav-item">
                                <a class="btn btn-outline-light me-2" asp-area="Customer" asp-controller="Movie" asp-action="Index">Movies</a>
                            </li>

                            <!-- Categories Button -->
                            <li class="nav-item">
                                <a class="btn btn-outline-light me-2" asp-area="Customer" asp-controller="Category" asp-action="Index">Categories</a>
                            </li>
                            <!-- Cart Button -->
                            <li class="nav-item">
                                <a class="btn btn-outline-light me-2" asp-area="Customer" asp-controller="Cart" asp-action="DisplayCart">Cart</a>
                            </li>




                            <!-- Sign Out Button -->
                            <li class="nav-item">
                                <form asp-area="Customer" asp-controller="RegisterData" asp-action="SignOut" method="post">
                                    <button type="submit" class="btn btn-danger">Sign Out</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container">
        <main role="main" class="flex-grow-1 pb-3">


            @RenderBody()
        </main>
    </div>
    <footer class="bg-dark text-white py-3 mt-auto">
        <div class="container text-center">
            <p class="mb-1">© @DateTime.Now.Year Cinema. All Rights Reserved.</p>
            <p class="small">Experience the best movies and cinema right at your fingertips.</p>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
