@model List<Movie>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
        background-color: #181818;
        color: white;
        font-family: Arial, sans-serif;
        }

        .container {
        margin-top: 50px;
        }

        .search-container {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
        }

        .movie-card {
        background-color: #222;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s;
        display: flex;
        flex-direction: column;
        height: auto;
        min-height: 550px;
        }

        .movie-card:hover {
        transform: scale(1.05);
        }

        .movie-card img {
        width: 100%;
        height: 275px;
        object-fit: cover;
        object-position: top;
        }

        .movie-details {
        padding: 15px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        }

        .movie-title {
        font-size: 1.5rem;
        font-weight: bold;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        }

        .movie-info {
        font-size: 1rem;
        opacity: 0.8;
        }

        .badge {
        font-size: 0.9rem;
        padding: 5px 10px;
        border-radius: 5px;
        }

        .price-tag {
        background-color: red;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        font-weight: bold;
        display: inline-block;
        margin-top: 10px;
        }

        .category-link {
        color: #e50914;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s ease;
        }

        .category-link:hover {
        color: #ff4c4c;
        text-decoration: underline;
        }

        .details-btn {
        background-color: dodgerblue;
        color: white;
        text-decoration: none;
        padding: 10px;
        border-radius: 5px;
        display: block;
        text-align: center;
        font-weight: bold;
        margin-top: 10px;
        transition: background-color 0.3s;
        }

        .details-btn:hover {
        background-color: royalblue;
        }
    </style>
</head>
<body>
    @* @if (User.Identity.IsAuthenticated) *@
